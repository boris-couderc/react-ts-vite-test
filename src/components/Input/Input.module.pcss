.input {
  background: #ffffff;
  position: relative;
  width: 100%;
  padding: var(--spacing-s);
  font-family: var(--font-family-sans-serif);
  font-size: 1.125rem;
  line-height: 1.125;
  height: 3rem;
  min-width: 3rem;
  border-radius: 100em;
  border: none;
  border: 2.5px solid #ffffff;
  box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.075);

  &:global(:focus),
  &:global(:hover) {
    outline: none;
  }

  &:global(:focus) {
    border: 2.5px solid var(--color-primary-200);
  }
}
