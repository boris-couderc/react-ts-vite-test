.header {
  position: relative;
  z-index: 100;
  border-bottom: 1px solid var(--color-neutral-200);
}

.content {
  display: grid;
  grid-template-columns: 1fr 6rem 1fr;
  width: 100%;
}

.logo {
  display: block;
  grid-column: 2;
  margin-left: 0.125rem;
  color: var(--color-primary);

  img {
    display: block;
    width: 6rem;
    height: 6rem;
    object-fit: contain;
  }
}

.-header-button-cart {
  grid-column: 3;
  justify-self: end;
}
